{
  "name": "AniGamer Hide Disliked Images",
  "version": "1.1",
  "manifest_version": 3,
  "description": "Automatically hide disliked images on AniGamer",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://nricslvprigwwrzbmizt.supabase.co/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://ani.gamer.com.tw/animeList.php*",
        "https://ani.gamer.com.tw/search.php*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "AniGamer Extension",
    "default_popup": "index.html"
  }
}
